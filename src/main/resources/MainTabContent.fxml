<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.ucombinator.jaam.visualizer.gui.SearchResults?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <SplitPane dividerPositions="0.2, 0.8" BorderPane.alignment="CENTER">
         <items>
            <VBox fx:id="leftPane" SplitPane.resizableWithParent="false" />
            <BorderPane fx:id="centerPane" />
            <SplitPane dividerPositions="0.2, 0.6" orientation="VERTICAL" SplitPane.resizableWithParent="false">
               <items>
                  <BorderPane>
                     <center>
                        <TextArea fx:id="descriptionArea" />
                     </center>
                     <top>
                        <Label text="Description" BorderPane.alignment="CENTER" />
                     </top>
                  </BorderPane>
                  <TreeView fx:id="classTree" showRoot="false" />
                  <SearchResults fx:id="searchResults" />
               </items>
            </SplitPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
