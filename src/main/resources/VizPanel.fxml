<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ScrollPane hbarPolicy="ALWAYS" vbarPolicy="ALWAYS">
         <content>
            <Pane fx:id="vizPanel" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <CheckBox fx:id="showEdges" onAction="#showEdgesAction" selected="true" text="Edges" />
            <CheckBox fx:id="showLabels" onAction="#showLabelsAction" text="Labels" />
            <CheckBox fx:id="methodsExpanded" onAction="#methodCollapseAction" selected="true" text="Expand Methods" />
            <CheckBox fx:id="chainsExpanded" onAction="#chainCollapseAction" selected="true" text="Expand Chains" />
            <Button onAction="#exportImageAction" text="Export PNG" />
            <Label text="Zoom:" />
            <Spinner fx:id="zoomSpinner" editable="true" prefWidth="100.0" />
            <Button fx:id="resetButton" onAction="#resetButtonPressed" text="Reset View" />
         </children>
      </HBox>
   </top>
</BorderPane>
